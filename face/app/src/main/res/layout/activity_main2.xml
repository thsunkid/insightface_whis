<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        >
        <FrameLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.15">
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            android:layout_weight="5.4"
            android:weightSum="10"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:background="#FFFFFF"
                android:layout_height="match_parent"
                android:layout_weight="1.75"></FrameLayout>
            <SurfaceView
                android:layout_weight="6.5"
                android:id="@+id/frame2"
                android:background="@drawable/apple2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
            </SurfaceView>
            <FrameLayout
                android:layout_width="0dp"
                android:background="#FFFFFF"
                android:layout_height="match_parent"
                android:layout_weight="1.75"></FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.25">
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>
        <TextView
            android:text="Kane Nguyen"
            android:textSize="25sp"
            android:fontFamily="@font/bold"
            android:textColor="#03A9F4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

        </TextView>
        <TextView
            android:text="Cần lấy dữ liệu, hãy nhấn vào nút chụp ảnh"
            android:textSize="15sp"
            android:fontFamily="@font/regular"
            android:textColor="#88000000"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
        </TextView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5">
        </FrameLayout>

        <Button
            android:id="@+id/buttonsingup"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mybtn"
            android:fontFamily="@font/bold"
            android:text="Chụp Ảnh"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</FrameLayout>